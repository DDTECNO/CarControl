@model CarControl.Domain.ViewModel.LoginViewModel
@{
    ViewData["Title"] = "Login de usuário";
}

<div class="logo">
    <img src="../Imagens/Logos/logoSite.png" />
</div>
<div class="form">
    <form asp-action="LoginUsuario" method="post">
        <div class="form-group" id="form-input">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group" id="form-input">
            <label asp-for="Senha">Senha</label>
            <input asp-for="Senha" type="password" class="form-control" />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Entrar</button>
        <hr />
        @Html.ValidationSummary()
        <hr />
        <div>
            <a asp-controller="Login" asp-action="RegistroDeUsuario">Registre-se |</a>
            <a asp-controller="Login" asp-action="RedefinirSenha">Esqueci minha senha</a>
        </div>
    </form>

</div>
