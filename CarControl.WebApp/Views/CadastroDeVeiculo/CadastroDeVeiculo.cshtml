@model CarControl.Domain.Veiculo

@{
    ViewData["Title"] = "Cadastro De veículo";
}

<h1 class="Titulo">Cadastrar veículo</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="InserirCadastro">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TpVeiculo" class="control-label">Tipo de Veículo</label>
                <input asp-for="TpVeiculo" class="form-control" />
                <span asp-validation-for="TpVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cor" class="control-label"></label>
                <input asp-for="Cor" class="form-control" />
                <span asp-validation-for="Cor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlacaVeiculo" class="control-label">Placa do Veículo</label>
                <input asp-for="PlacaVeiculo" class="form-control" />
                <span asp-validation-for="PlacaVeiculo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NmCondutor" class="control-label">Nome do condutor</label>
                <input asp-for="NmCondutor" class="form-control" />
                <span asp-validation-for="NmCondutor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CpfCondutor" class="control-label">CPF do Condutor</label>
                <input type="text" asp-for="CpfCondutor" class="form-control" />
                <span asp-validation-for="CpfCondutor" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Voltar ao menu  |</a>
    <a asp-controller="RegistroDeMovimento" asp-action="RegistroDeEntrada">Registrar nova entrada |</a>
    <a asp-controller="RegistroDeMovimento" asp-action="RegistroDeSaida">Registrar saída |</a>
    <a asp-controller="ConsultarVagas" asp-action="ConsultarVagas">Consultar vagas  |</a>
    <a asp-controller="CadastroDeveiculo" asp-action="VeiculosCadastrados">Consultar veículos cadastrados</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
