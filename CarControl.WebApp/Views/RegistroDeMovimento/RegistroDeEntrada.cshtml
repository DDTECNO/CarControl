@model CarControl.Domain.ViewModel.MovimentoViewModel

@{
    ViewData["Title"] = "Registro De Entrada";
}

<h1>Registro De Entrada</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="RegistroDeEntradaDeVeiculo">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DtEntrada" class="control-label"></label>
                <input asp-for="DtEntrada" class="form-control" />
                <span asp-validation-for="DtEntrada" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HrEntrada" class="control-label"></label>
                <input asp-for="HrEntrada" class="form-control" />
                <span asp-validation-for="HrEntrada" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Veiculos" class="control-label">Selecione o CPF do condutor</label>
                @Html.DropDownListFor(model => model.Veiculos, new SelectList(Model.Veiculos, "IdVeiculo","CpfCondutor")
                , new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Vagas" class="control-label">Selecione a vaga</label>
                @Html.DropDownListFor(model => model.Vagas, new SelectList(Model.Vagas, "IdVaga","NmVaga")
                , new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label asp-for="Operacoes" class="control-label">Selecione o tipo de operação</label>
                @Html.DropDownListFor(model => model.Operacoes, new SelectList(Model.Operacoes, "IdTpOperacao","nmOperacao")
                , new { @class = "form-control" })
            </div>

            <div class="form-group">
                <input id="btnSalvar" type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-controller="Home" asp-action="Index">Voltar ao menu  |</a>
<a asp-controller="CadastroDeVeiculo" asp-action="CadastroDeVeiculo">Inserir novo Veículo  |</a>
<a asp-controller="CadastroDeveiculo" asp-action="VeiculosCadastrados">Consultar veículos cadastrados  |</a>
<a asp-controller="ConsultarVagas" asp-action="ConsultarVagas">Consultar vagas  |</a>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script type="text/jscript">
        $('#btnSalvar').click(function () {
            var url = "/CadastroDeVeiculo/EditarVeiculoCadastrado";
            var id = $("#IdVeiculo").val();
            $.post(url, { idVeiculo: id }
                    });
                })
    </script>
    
    }

    }
