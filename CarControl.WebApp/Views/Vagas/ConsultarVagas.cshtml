@model IEnumerable<CarControl.Common.ViewModel.VagaViewModel>

@{
    ViewData["Title"] = "Consultar vagas";
}

<h1 class="Titulo">Consultar vagas</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NmVaga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FlVaga)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NmVaga)
                </td>
                @if(item.FlVaga.ToString() == "D"){
                <td class="flagVagaDisponivel" id="flagVaga" >
                    @Html.DisplayFor(modelItem => item.FlVaga)
                </td>

                }
                else{
                    <td class="flagVagaIndisponivel" id="flagVaga">
                        @Html.DisplayFor(modelItem => item.FlVaga)
                    </td>
                }
                <td class="tdIdVeiculo">
                    @if (item.FlVaga.ToString() == "D")
                    {
                        <a href="@Url.Action("RegistroDeEntrada", "Movimento")?IdVaga=@item.IdVaga">Registrar entrada</a>
                    }
                    else
                    {
                        <a href="@Url.Action("RegistroDeSaida", "Movimento")?IdVaga=@item.IdVaga">Registrar saída</a>
                    }                
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-controller="Home" asp-action="Index">Voltar ao menu  |</a>
<a asp-controller="Veiculo" asp-action="CadastroDeVeiculo">Inserir novo Veículo  |</a>
<a asp-controller="Movimento" asp-action="RegistroDeEntrada">Registrar nova entrada |</a>
<a asp-controller="Movimento" asp-action="RegistroDeSaida">Registrar saída |</a>
<a asp-controller="Veiculo" asp-action="VeiculosCadastrados">Consultar veículos cadastrados</a>
